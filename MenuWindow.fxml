<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" 
            minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="600.0" prefWidth="400.0" 
            stylesheets="@MenuWindow.css" 
            xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pjatu.MenuController">
    <children>
      <HBox prefHeight="150.0" prefWidth="400.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" 
                       pickOnBounds="true" 
                       preserveRatio="true">
               <image>
                  <Image url="@res/logo.png" />
               </image>
            </ImageView>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" 
                  text="Polsko-Japońska ArcyTrudna Układanka" 
                  wrappingWidth="250">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Franklin Gothic Demi" 
                        size="33.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <VBox layoutY="150.0" 
            prefHeight="456.0" prefWidth="400.0">
         <children>
            <Button fx:id="easyButton" 
                    mnemonicParsing="false" 
                    prefHeight="80.0" prefWidth="405.0" 
                    text="Łatwy"
                    onAction="#onEasyClicked" >
               <font>
                  <Font name="Franklin Gothic Book" 
                        size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" 
                          right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="mediumButton" 
                    mnemonicParsing="false" 
                    prefHeight="80.0" prefWidth="405.0" 
                    text="Średni"
                    onAction="#onMediumClicked" >
               <font>
                  <Font name="Franklin Gothic Book" 
                        size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" 
                          right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="hardButton" 
                    mnemonicParsing="false" 
                    prefHeight="80.0" prefWidth="405.0" 
                    text="Trudny"
                    onAction="#onHardClicked" >
               <font>
                  <Font name="Franklin Gothic Book" 
                        size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" 
                          right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" 
                    prefHeight="80.0" prefWidth="405.0" 
                    text="Tabela wyników"
                    fx:id="highscoreButton"
                    onAction="#onHighscoreClicked" >
               <font>
                  <Font name="Franklin Gothic Book" 
                        size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" 
                          right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" 
                    prefHeight="40.0" prefWidth="180.0" 
                    text="Wyjście"
                    fx:id="exitButton"
                    onAction="#onExitClicked" >
               <font>
                  <Font name="Franklin Gothic Book" 
                        size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="230.0" 
                          right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
